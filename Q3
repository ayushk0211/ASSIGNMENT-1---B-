#include <stdio.h>
#include <string.h>
#include <ctype.h>

struct Word {
    char word[50];
    int count;
};

int main() {
    char paragraph[1000];
    fgets(paragraph, sizeof(paragraph), stdin);
    struct Word words[100];
    int wordCount = 0;
    char *token = strtok(paragraph, " ,.-\n");

    while (token != NULL) {
        int found = 0;
        for (int i = 0; i < wordCount; i++) {
            if (strcasecmp(words[i].word, token) == 0) {
                words[i].count++;
                found = 1;
                break;
            }
        }
        if (!found) {
            strcpy(words[wordCount].word, token);
            words[wordCount].count = 1;
            wordCount++;
        }
        token = strtok(NULL, " ,.-\n");
    }

    for (int i = 0; i < wordCount; i++)
        printf("%s: %d\n", words[i].word, words[i].count);

    return 0;
}
